{
  "files": [
    "**/*.ets"
  ],
  "ignore": [
    "**/src/ohosTest/**/*",
    "**/src/test/**/*",
    "**/src/mock/**/*",
    "**/node_modules/**/*",
    "**/oh_modules/**/*",
    "**/build/**/*",
    "**/.preview/**/*"
  ],
  "ruleSet": [
    "plugin:@performance/recommended",
    "plugin:@typescript-eslint/recommended",
  ],
  "rules": {
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "struct",
        "format": [
          "PascalCase"
        ],
        "suffix": [
          "Page",
          "Comp",
          "Dialog"
        ]
      },
      {
        "selector": "enum",
        "format": [
          "PascalCase"
        ],
        "suffix": [
          "Enum"
        ]
      },
    ]
  }
}